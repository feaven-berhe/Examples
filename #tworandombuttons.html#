  <title> Two Boxes </title>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>



  <script>
    var completelyLeft;
    var rightButton; 
    var color;
    
    $(function(){
      completelyLeft=$("#completelyLeft");
      completelyLeft.click(changeCompletelyLeft); 
      completelyRight=$("#completelyRight");
      completelyRight.click(changeCompletelyRight);
      partiallyLeft=$("#partiallyLeft");
      partiallyLeft.click(changePartiallyLeft);
      partiallyRight=$("#partiallyRight");
      partiallyRight.click(changePartiallyRight);
      }); 

//------------------------------------------------------------------------------------
function changeCompletelyLeft(){
 displayComplete();
    document.getElementById('leftDiv').style.backgroundColor=color;
    console.log(color);

}
       
//------------------------------------------------------------------------------------
function changeCompletelyRight(){
 displayComplete();
 document.getElementById('rightDiv').style.backgroundColor= color;
    console.log( color);

}
       

//------------------------------------------------------------------------------------

function changePartiallyLeft(){
 displayPartial();
 document.getElementById('leftDiv').style.backgroundColor= color;
    console.log( color);

}
       

//------------------------------------------------------------------------------------

function changePartiallyRight(){
 displayPartial();
 document.getElementById('rightDiv').style.backgroundColor= color;
    console.log(color);

}
//------------------------------------------------------------------------------------
function displayPartial(){     
    console.log("displaying a partially random color: ");
    color = '#';
    letters= ['FF0000', '00FF00', '0000FF', 'FFFF00', '00FFFF', 'FF00FF', 'C0C0C0'];
    color+= letters[Math.floor(Math.random() *letters.length)]; 

    }

//-----------------------------------------------------------------------------------
function displayComplete(){
    console.log("displaying a completely random color: ");
    color ="#000000".replace(/0/g,function(){return (~~(Math.random()*16)).toString(16);});
 

}
//-------------------------------------------------------------------------------------


  </script>
      
  </head>


